public class impostoDeRenda {

    public static void main(String[] args) {

        double salario = 2000.0;

        // De 1900.0 até 2800.0, o IR é de 7.5% e pode deduzir na declaração o valor de R$ 142
        // De 2800.01 até 3751.0, o IR é de 15% e pode deduzir R$ 350
        // De 3751.01 até 4664.00, o IR é de 22.5% e pode deduzir R$ 636
        
        if (salario >= 1900 && salario <= 2800) {
        	double coletadoIr = salario*0.75;
        	System.out.println("Seu salário é R$ " + salario + " e se encaixa no grupo 1 (alíquota de 7.5 %). "
        			+ "O valor deduzido pode ser de até R$ " + coletadoIr);
        } else if (salario >= 2800.01 && salario <= 3751) {
        	double coletadoIr = salario*0.15;
        	System.out.println("Seu salário é R$ " + salario + " e se encaixa no grupo 2 (alíquota de 15 %). "
        			+ "O valor deduzido pode ser de até R$ " + coletadoIr);
        } else if (salario >= 3751 && salario <= 4664.00) {
        	double coletadoIr = salario*0.225;
        	System.out.println("Seu salário é R$ " + salario + " e se encaixa no grupo 3 (alíquota de 22.5 %). "
        			+ "O valor deduzido pode ser de até R$ " + coletadoIr);
        }
    }
}

